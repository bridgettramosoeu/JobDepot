<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/fragment_container_history"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Posted Job History"
        android:id="@+id/textViewJobHistory"
        android:layout_gravity="center_horizontal|top"
        android:textStyle="bold"
        android:typeface="sans"
        android:textColor="#ff7b8fff"
        android:gravity="center|center_vertical|center_horizontal|clip_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="35dp" />

    <ExpandableListView
        android:layout_width="wrap_content"
        android:layout_height="450dp"
        android:id="@+id/expandableListViewJobHistory"
        android:layout_gravity="center|bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:paddingTop="70dp"
        android:layout_below="@+id/textViewJobHistory" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button2"
        android:layout_below="@+id/textViewJobHistory"
        android:layout_alignParentRight="true" />
</RelativeLayout>